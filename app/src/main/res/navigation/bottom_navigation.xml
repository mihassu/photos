<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bnv_navigation"
    app:startDestination="@id/photos_fragment_nav">

    <fragment
        android:id="@+id/photos_fragment_nav"
        android:name="ru.mihassu.photos.ui.fragments.photos.PhotosFragment"
        android:label="@string/photos_fragment"
        tools:layout="@layout/fragment_photos">

        <action
            android:id="@+id/action_photos_to_favorite"
            app:destination="@id/favorite_fragment_nav"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/favorite_fragment_nav"
        android:name="ru.mihassu.photos.ui.fragments.favorite.FavoriteFragment"
        android:label="@string/favorite_label"
        tools:layout="@layout/fragment_favorite">

        <action
            android:id="@+id/action_favorite_to_photos"
            app:destination="@id/photos_fragment_nav"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>



</navigation>