<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_navigation"
    app:startDestination="@id/main_fragment_nav">

    <fragment
        android:id="@+id/main_fragment_nav"
        android:name="ru.mihassu.photos.ui.fragments.main.MainFragment"
        android:label="@string/photos_fragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_to_single_photo_fragment"
            app:destination="@id/single_photo_nav"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/single_photo_nav"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/single_photo_nav"
        android:name="ru.mihassu.photos.ui.fragments.photo.SinglePhotoFragment"
        android:label="@string/view_photo_fragment"
        tools:layout="@layout/fragment_single_photo">

        <argument
            android:name="photoId"
            app:argType="long"/>
    </fragment>

</navigation>